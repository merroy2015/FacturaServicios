@model IEnumerable<Vivienda>

<flash dismissable="true" />

<table class="table table-striped table-responsive-md table-bordered smfont"  id="CountriesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>         
            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "Vivienda", new { id = 0 }, Context.Request.Scheme)' , 'Nuevo País')" class="btn btn-sm btn-primary text-white"><i class="fa fa-plus-circle"></i> País</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                <a asp-action="Details" asp-controller="Vivie" asp-route-id="@item.id">@Html.DisplayFor(modelItem => item.Tipo)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "Vivienda", new { id = item.id }, Context.Request.Scheme)' , 'Actualizar País')" class="btn btn-sm btn-warning"><i class="fa fa-pencil-alt"></i> </a>
                <button data-id="@item.id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
            </td>
        </tr>
        }
    </tbody>
</table>

