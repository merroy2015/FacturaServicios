@model IEnumerable<Ruta>

<flash dismissable="true" />

<table class="table table-striped table-responsive-md table-bordered smfont"  id="CountriesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongitudIni)
            </th>         
            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "Ruta", new { id = 0 }, Context.Request.Scheme)' , 'Nueva Vivienda')" class="btn btn-sm btn-primary text-white"><i class="bi bi-plus-circle-fill"></i>Nueva</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                <a asp-action="Details" asp-controller="ruta" asp-route-id="@item.id">@Html.DisplayFor(modelItem => item.Nombre)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongitudIni)
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "ruta", new { id = item.id }, Context.Request.Scheme)' , 'Actualizar Vivienda')" class="btn btn-sm btn-warning"><i class="bi-pencil-fill"></i> </a>
                <button data-id="@item.id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="bi-trash-fill"></i></button>
            </td>
        </tr>
        }
    </tbody>
</table>

